@using SearchFunctionality.Models

<partial name="_ModuleList" model="@ViewBag.ModuleMasterList" />


@section Scripts{
    <script>
        $(document).ready(function () {
            $("#searchInput").on("keyup", searchInputMethod);
          
        });


        function searchInputMethod() {

            var value = $(this).val().toLowerCase();

            $("#moduleTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        }
    </script>
}